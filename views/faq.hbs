        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', Calibri, sans-serif;
            height: 100%;
            padding: 20px;
            display: flex;
            flex-direction: column;
            font-size: 1.2em;
        }

        .content {
            flex-grow: 3;
        }

        footer {
            flex-grow: 1;
            text-align: center;
            padding-bottom: 10px;
        }

        a {
            text-decoration: none;
        }
    </style>
    <title>FAQs</title>
</head>

<body>
<div class="content">
<h2>Frequently Asked Questions</h2>
{{#each faqs }}
    <b id="{{ this.id }}">{{ this.question }}</b>
    <div>{{{ this.answer }}}</div>
    <br>
{{/each}}

</div>

